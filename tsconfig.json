{
  "include": ["src", "prisma", "tests"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@user/*": ["src/features/user/*"],
      "@place/*": ["src/features/place/*"],
      "@city/*": ["src/features/city/*"],
      "@menuItem/*": ["src/features/menuItem/*"],
      "@menuReview/*": ["src/features/menuReview/*"],
      "@search/*": ["src/features/search/*"],
      "@review/*": ["src/features/review/*"],
      "@auth/*": ["src/features/auth/*"],
      "@prisma/*": ["prisma/*"]
    }
  }
}
